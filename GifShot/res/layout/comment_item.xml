
<!-- 评论列表item -->
<!-- id 均以 comment_wegitname_function 命名 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="5dp" >

    <!-- 头像 -->

    <com.gp.gifshot.myoverride.CircleImageView
        android:id="@+id/comment_image_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
         >

        <!-- 用户昵称 -->

        <TextView
            android:id="@+id/comment_text_usernickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Amren"
            android:textColor="#202020"
             />

        <TextView
            android:id="@+id/comment_text_usercomment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="这个老师以前就给我们播放过了，垃圾视频这个老师以前就给我们播放过了，垃圾视频"
            android:textColor="@drawable/detail_master"
             />
    </LinearLayout>

    <!-- 发表时间 -->

    <TextView
        android:id="@+id/comment_text_usercomment_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right|top"
        android:padding="10dp"
        android:text="2小时"
        android:textSize="10dp" />

</LinearLayout>